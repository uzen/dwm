diff --git a/dwm.c b/dwm.c
index 0362114..ff7e096 100644
--- a/dwm.c
+++ b/dwm.c
@@ -565,6 +565,7 @@ void
 configurenotify(XEvent *e)
 {
 	Monitor *m;
+	Client *c;
 	XConfigureEvent *ev = &e->xconfigure;
 	int dirty;
 
@@ -576,8 +577,12 @@ configurenotify(XEvent *e)
 		if (updategeom() || dirty) {
 			drw_resize(drw, sw, bh);
